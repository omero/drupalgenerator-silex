<section id="block">
    <h2>Generate Block Plugins</h2>
    <br/>

    <div class="multi-field-wrapper">
        <div class="multi-field">
            <div class="row">
                <div class="input-field col s4">
                    <input id="block_class" type="text">
                    <label for="block_class">Class</label>
                </div>
                <div class="input-field col s4">
                    <input id="block_label" type="text">
                    <label for="block_label">Label</label>
                </div>
                <div class="input-field col s4">
                    <input id="block_id" type="text">
                    <label for="block_id">Id</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s4">
                    <input type="checkbox" id="block_load_service"/>
                    <label for="block_load_service">Load service from the container</label>
                </div>
                <div class="input-field col s8">
                    <input id="block_service_container" type="text">
                    <label for="block_service_container">Services</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input type="checkbox" id="block_form_structure_check"/>
                    <label for="block_form_structure_check">Generate Form Structure</label>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s1 offset-s11">
            <a href="#" class="btn-floating btn-large waves-effect waves-light right-align add-permission remove-field"><i class="mdi-content-add"></i></a>
        </div>
    </div>
</section>